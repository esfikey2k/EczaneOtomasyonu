<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".kisilermv.view.DetailsActivity">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="144dp"
        android:layout_height="23dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="23dp"
        android:text="Name"
        android:textColor="@color/detailsFontColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textViewStatus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTc"
        android:layout_width="145dp"
        android:layout_height="20dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="140dp"
        android:text="TC"
        android:textColor="@color/detailsTcFontColor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="82dp"
        android:layout_height="20dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:text="Status"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewToplamIlacText"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewTotal"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_marginStart="76dp"
        android:text="109.87"
        android:textColor="@color/detailsFontColor"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewToplamBorcText" />

    <TextView
        android:id="@+id/textViewToplamBorcText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="2dp"
        android:text="Toplam Borç"
        android:textColor="@color/detailsFontColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewTotal"
        app:layout_constraintEnd_toStartOf="@+id/textViewToplamIlacText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTc" />

    <TextView
        android:id="@+id/textViewToplamIlacText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="3dp"
        android:text="Toplam İlaç"
        android:textColor="@color/detailsFontColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewToplamIlac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTc" />

    <TextView
        android:id="@+id/textViewToplamIlac"
        android:layout_width="32dp"
        android:layout_height="26dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="95dp"
        android:text="3"
        android:textColor="@color/detailsFontColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewToplamIlacText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="391dp"
        android:layout_height="347dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>